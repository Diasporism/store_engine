<% if logged_in? %>
  <%= form_tag buy_now_path do %>
    <%= hidden_field_tag 'order', product.id.to_s %>
    <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
            data-key="pk_test_osSOH0LyEEACshdRsLjyvGSz"
            data-image="/128x128.png"
            data-name="Frank's Creations"
            data-description="Order Form"
            data-amount="100">
    </script>
  <% end %>
<% else %>
  <%= button_to "Enable 'Buy Now'", login_path, method: :get, class: 'btn' %>
<% end %>
