<%= link_to t('store.name'), root_path, :class => 'brand' %>
<ul class="nav pull-right">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t 'navigation.languages' %> <b class="caret"></b></a>
    <ul class="dropdown-menu">
      <li><%= link_to t('languages.english'), i18n_path(locale: 'en'), method: :put %></li>
      <li><%= link_to t('languages.creaturespeak'), i18n_path(locale: 'cs'), method: :put %></li>
      <li><%= link_to t('languages.french'), i18n_path(locale: 'fr'), method: :put %></li>
    </ul>
  </li>
  <% if logged_in? %>
    <li><%= render 'layouts/logout_button' %></li>
    <li><%= link_to t('navigation.account'), account_path %></li>
  <% else %>
    <li><%= link_to t('navigation.login'), login_path  %></li>
    <li><%= link_to t('navigation.signup'), signup_path %></li>
  <% end %>
    <li><%= button_to "#{t 'navigation.cart'} #{current_cart.count}", cart_path, class: 'btn btn-warning', method: :get %></li>
</ul>
