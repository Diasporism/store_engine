<%= render partial: 'shared/admin_navigation',
           locals: { active: current_page?(admin_dashboard_path) ? :dashboard : :search } %>

<div class="span8">
  <h1><% if current_page?(admin_dashboard_path) %>Dashboard<% else %>Search<%end%></h1>
  <hr>

  <% if @count > 0 %>

    <% if current_page?(admin_search_path) %>
      <%= render 'advanced_search_form' %>
    <% else %>
    <%= render partial: 'admin_dashboard_nav', locals: {active_tab: @active_tab,
                                                        count: @count,
                                                        statuses: @statuses} %>
    <% end %>
    <br>
    <table class="table">
    <thead>
      <th>#</th>
      <th>Created at</th>
      <th>Status</th>
      <th>Modify</th>
    </thead>
    <tbody>
      <%= render @orders %>
    </tbody>
    </table>
  <% else %>
    No orders!
  <% end %>

</div>
